{
  "name": "optimal-minify",
  "version": "0.0.1",
  "description": "Determine and use uglify or terser at runtime based on minification performance.",
  "main": "src/index.js",
  "bin": {
    "optimal-minify": "src/cli.js"
  },
  "scripts": {
    "lint": "vjsstandard",
    "prepublishOnly": "vjsverify --verbose --skip-es-check",
    "test": "npm run lint",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "doctoc --notitle",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "brotli-size": "^4.0.0",
    "gzip-size": "^5.1.1",
    "lodash.clonedeep": "^4.5.0",
    "terser": "^4.1.3",
    "uglify-js": "^3.6.0"
  },
  "devDependencies": {
    "@videojs/generator-helpers": "~1.1.1",
    "videojs-generator-verify": "~1.2.0",
    "videojs-standard": "^8.0.3"
  }
}
